@model IEnumerable<BookingApp_v1._0.Models.Hotel>

@{
    ViewBag.Title = "All Hotels";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">All Hotels</h2>

    <!-- Include DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />

    <div class="table-responsive">
        <table id="hotelsTable" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Hotel Name</th>
                    <th>Website</th>
                    <th>Location</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hotel in Model)
                {
                    <tr>
                        <td>@hotel.HotelName</td>
                        <td>
                            <a href="@hotel.HotelWebsite" target="_blank" class="text-primary">@hotel.HotelWebsite</a>
                        </td>
                        <td>@hotel.Location.LocationName</td> <!-- Displaying the associated location name -->
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Include jQuery and DataTables JS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $('#hotelsTable').DataTable({
            // Optional: customize your DataTable options here
            "paging": true, // Enable pagination
            "searching": true, // Enable search box
            "ordering": true // Enable column ordering
        });
    });
</script>


