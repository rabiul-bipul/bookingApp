@model IEnumerable<BookingApp_v1._0.Models.Location>

@{
    ViewBag.Title = "All Locations";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">All Locations</h2>

    <!-- Include DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />

    <div class="table-responsive">
        <table id="locationsTable" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Location Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var location in Model)
                {
                    <tr>
                        <td>@location.LocationName</td>
                        <td>
                            <a href="@location.Description" target="_blank" class="text-primary">@location.Description</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Include jQuery and DataTables JS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $('#locationsTable').DataTable({
            // Optional: customize your DataTable options here
            "paging": true, // Enable pagination
            "searching": true, // Enable search box
            "ordering": true // Enable column ordering
        });
    });
</script>


