@model IEnumerable<BookingApp_v1._0.Models.Package>

@{
    ViewBag.Title = "Available Packages";
}

<div class="jumbotron text-center">
    <h1>Welcome to the Booking App!</h1>
    <p class="lead">Find the best packages for your travel needs.</p>
</div>

<div class="container">
    <h2 class="text-success mb-4">Top Packages</h2>
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @{
                var packageList = Model.ToList(); // Convert to list so you can access packages by index
                var totalPackages = packageList.Count;
            }

            @if (totalPackages > 0)
            {
                <!-- Display first package -->
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="https://thumbs.dreamstime.com/z/adventure-travel-tourism-hike-people-concept-group-smiling-friends-backpacks-map-outdoors-hiking-127569517.jpg"
                             class="card-img-top"
                             alt="Package Image"
                             width="300"
                             height="250"
                             style="object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@packageList[0].PackageName</h5>
                            <p class="card-text">@packageList[0].Details</p>
                            <p class="font-weight-bold">Price: @packageList[0].Price</p>
                            <p class="font-weight-bold">Expire Date: @packageList[0].ExpireDate.ToString("MM/dd/yyyy")</p>
                            <p class="font-weight-bold">Hotel: @packageList[0].Hotel.HotelName</p>
                            <p class="font-weight-bold">Location: @packageList[0].Location.LocationName</p>
                            <a href="@Url.Action("Details", "Package", new { id = packageList[0].PackageId })" class="btn btn-primary">Book</a>
                        </div>
                    </div>
                </div>
            }

            @if (totalPackages > 1)
            {
                <!-- Display second package -->
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="https://www.trolleytours.com/wp-content/uploads/2016/07/trolley-tours-of-key-west.jpg"
