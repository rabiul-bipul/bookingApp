@model BookingApp_v1._0.Models.Hotel

@{
    ViewBag.Title = "Edit Hotel";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="col-lg-5 col-md-7">
        <!-- Refined form with minimal borders and soft shadow -->
        <div class="p-4 bg-white border rounded shadow-sm">
            <h3 class="text-center mb-4">Edit Hotel</h3>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <!-- Validation Summary -->
                @Html.ValidationSummary(true, "", new { @class = "text-danger text-center" })
                @Html.HiddenFor(model => model.HotelId)

                <!-- Hotel Name Input -->
                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.HotelName, new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.HotelName, new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control",
                            placeholder = "Enter hotel name"
                        }
                    })
                    @Html.ValidationMessageFor(model => model.HotelName, "", new { @class = "text-danger small" })
                </div>

                <!-- Hotel Website Input -->
                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.HotelWebsite, new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.HotelWebsite, new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control",
                            placeholder = "Enter hotel website"
                        }
                    })
                    @Html.ValidationMessageFor(model => model.HotelWebsite, "", new { @class = "text-danger small" })
                </div>

                <!-- Location Dropdown -->
                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.LocationId, "Location", new { @class = "form-label fw-bold" })
                    @Html.DropDownList("LocationId", null, new { @class = "form-control" })
                    @Html.ValidationMessage("LocationId", "", new { @class = "text-danger small" })
                </div>

                <!-- Buttons -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg px-4">Save</button>
                    <button type="button" class="btn btn-outline-secondary btn-lg px-4 ml-2" onclick="window.history.back();">Cancel</button>
                </div>
            }
        </div>
    </div>
</div>

<div class="text-center mt-3">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-link" })
</div>
