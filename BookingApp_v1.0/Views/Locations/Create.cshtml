@model BookingApp_v1._0.Models.Location

@{
    ViewBag.Title = "Create Location";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="col-lg-5 col-md-7">
        <!-- Refined form with minimal borders and soft shadow -->
        <div class="p-4 bg-light border rounded shadow-sm">
            <h3 class="text-center mb-4">Create New Location</h3>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <!-- Validation Summary -->
                @Html.ValidationSummary(true, "", new { @class = "text-danger text-center" })

                <!-- Location Name Input -->
                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.LocationName, new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.LocationName, new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control",
                            placeholder = "Enter location name"
                        }
                    })
                    @Html.ValidationMessageFor(model => model.LocationName, "", new { @class = "text-danger small" })
                </div>

                <!-- Description Input (Changed to a normal input box) -->
                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.Description, new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.Description, new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control",
                            placeholder = "Enter location description"
                        }
                    })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger small" })
                </div>

                <!-- Buttons -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg px-4">Create</button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-lg px-4">Cancel</a>
                </div>
            }
        </div>
    </div>
</div>
